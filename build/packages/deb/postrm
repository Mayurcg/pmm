#!/bin/bash
# postrm script for pmm-agent
#

set -e

if [ -f /usr/share/debconf/confmodule ]; then
  . /usr/share/debconf/confmodule
fi

case "$1" in

  purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
  ;;

  *)
    echo "postrm called with unknown argument '$1'" 1>&2
    exit 1
  ;;

esac

if [ "$1" = "purge" ]; then
    userdel pmm-agent || true
    if [ -f /usr/local/percona ]; then
        echo -n "Deleting percona directory..."
        rm -f /usr/local/percona
        echo "OK"
    fi

    # delete binaries if we are purging
    if [ -f /usr/sbin/pmm-admin ]; then
      echo -n "Deleting pmm-admin..."
      rm -f /usr/sbin/pmm-admin
      echo "OK"
    fi

    if [ -f /usr/sbin/pmm-agent ]; then
      echo -n "Deleting pmm-agent..."
      rm -f /usr/sbin/pmm-agent
      echo "OK"
    fi
fi

#DEBHELPER#

exit 0
